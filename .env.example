# Database Configuration
database.default.hostname = localhost
database.default.database = bisajoin
database.default.username = root
database.default.password = 
database.default.DBDriver = MySQLi
database.default.DBPrefix = 
database.default.port = 3306

# Telegram Bot Configuration
telegram.bot_token = YOUR_TELEGRAM_BOT_TOKEN_HERE
telegram.chat_id = YOUR_TELEGRAM_CHAT_ID_HERE

# Application Configuration
app.baseURL = 'http://localhost:8080'

# Encryption Key (will be generated automatically)
encryption.key = YOUR_ENCRYPTION_KEY_HERE

# Email Configuration
email.protocol = smtp
email.mailpath = /usr/sbin/sendmail
email.smtp_host = smtp.gmail.com
email.smtp_user = your_email@gmail.com
email.smtp_pass = your_app_password
email.smtp_port = 587
email.smtp_crypto = tls
email.mailType = html
email.charset = utf-8
email.wordWrap = true

# File Upload Configuration
uploadPath = uploads
allowedTypes = jpg,jpeg,png,gif,pdf
maxSize = 2048
maxHeight = 1000
maxWidth = 1000

# Application Environment
app.baseURL = 'http://localhost:8080'
app.timezone = Asia/Jakarta

# Logging Configuration
logger.threshold = debug
logger.fileExtension = log
logger.path = writable/logs/

# Cache Configuration
cache.handler = file
cache.prefix = bisajoin_

# Session Configuration
session.driver = file
session.cookieName = bisajoin_session
session.expiration = 7200

# Security Configuration
security.csrfTokenName = csrf_token_name
security.csrfHeaderName = X-CSRF-TOKEN
security.csrfRegenerate = true
security.csrfExcludeURIs = []

# Upload Configuration
upload.directory = writable/uploads/
upload.allowedTypes = jpg,jpeg,png,gif,pdf
upload.maxSize = 2048
upload.maxWidth = 1000
upload.maxHeight = 1000